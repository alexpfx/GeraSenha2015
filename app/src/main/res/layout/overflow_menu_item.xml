<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_lateral_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/password_type_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:background="@null" />

    <TextView
        android:id="@+id/titulo_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/password_type_imageview"
        android:layout_toEndOf="@id/password_type_imageview"
        android:layout_toRightOf="@id/password_type_imageview"
        android:text="senhas concatenadas" />

    <TextView
        android:id="@+id/subtitulo_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password_type_imageview"
        android:layout_alignLeft="@id/titulo_text_view"
        android:layout_toEndOf="@id/password_type_imageview"
        android:layout_toRightOf="@id/password_type_imageview"
        android:text="senhas concatenadas"

        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/subtitulo_text_view"
        android:layout_margin="8dp" />

</RelativeLayout>