<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    >

    <TextView
        android:id="@+id/tags_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="tags: "
        android:textColor="@color/md_white_1000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/password_tag_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_toEndOf="@+id/tags_label"
        android:layout_toRightOf="@+id/tags_label"
        android:text="email"
        android:textColor="@color/md_white_1000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tags_label"
        android:layout_marginTop="4dp"
        android:background="@color/md_white_1000" />


    <TextView
        android:id="@+id/gen_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password_tag_textview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/md_white_1000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tags_label"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="Senha Gerada:"
        android:textColor="@color/md_white_1000"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/generated_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_weight="1"
        android:singleLine="false"
        android:text="nononononsSSSSSSSSSSSSSSSSSSSSSSSxxxxxxxxxxxxxxxxxxxxx"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/md_white_1000"
        android:textStyle="bold" />

    <View
        android:id="@+id/div2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/generated_password_textview"
        android:layout_marginTop="4dp"
        android:background="@color/md_white_1000" />


    <TextView
        android:id="@+id/forca_senha_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/div2"
        android:text="forÃ§a da senha: "
        android:textColor="@color/md_white_1000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="128bits: "
        android:textColor="@color/md_white_1000"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/forca_senha_label"
        android:layout_toEndOf="@id/forca_senha_label"
        android:layout_toRightOf="@id/forca_senha_label"
        android:id="@+id/textView4" />


    <ImageButton
        android:id="@+id/btn_password_settings"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:alpha="5"
        android:background="@drawable/circle"
        android:elevation="2dp"
        android:src="@drawable/ic_action_settings"
        android:layout_below="@+id/forca_senha_label"
        android:layout_alignLeft="@+id/forca_senha_label"
        android:layout_alignStart="@+id/forca_senha_label" />

    <ImageButton
        android:id="@+id/btn_new_password"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:alpha="5"
        android:background="@drawable/circle"
        android:elevation="2dp"
        android:src="@drawable/ic_action_new"
        android:layout_below="@+id/forca_senha_label"
        android:layout_toRightOf="@+id/password_tag_textview"
        android:layout_toEndOf="@+id/password_tag_textview" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/div2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_action_copy"
            android:tint="@color/md_white_1000"
            android:baselineAlignBottom="false"
            android:clickable="true"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_action_share"
            android:tint="@color/md_white_1000" />
    </LinearLayout>

</RelativeLayout>